configuration {
	modi: "drun,window,run,ssh";
	font: "mono 14";
	location: 4;
	show-icons: true;
	matching: "fuzzy";
	scroll-method: 1;
	display-drun: "";
	kb-remove-to-eol: ""; /* clear */
	kb-remove-to-sol: ""; /* clear */
	kb-accept-entry: "Return"; /* clear */
	kb-row-up: "Control+k,Up,Control+p,ISO_Left_Tab";
	kb-row-down: "Control+j,Down,Control+n";
}

@import "gruvbox-dark-soft.rasi"

window {
	width: 25%;
	height: 100%;
}
